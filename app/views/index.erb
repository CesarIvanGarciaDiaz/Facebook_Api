<% if @user_facebook %>
<div class='uk-container uk-container-center contenido_d'>
    <h1 class="h1">Welcome
        <%=@user.name  %></h1>
    <a href="/logout" class="uk-button uk-button-primary uk-width-1-1 " id="btn_logout">LogOut</a>
</div>
<br>

<div class='uk-container uk-container-center uk-form-row contenido_2'>
    <h3>USER LINE TIME:</h3><br>
    <% @user_facebook.get_connection('me','posts',{fields: ['message','story','picture','likes']}).each do |x| %>
    <div>
        <img class="h1" src="<%= @user_facebook.get_picture('me') %>" alt="No img found">

            <%= x["story"]%>

        <p>
            <%= x["message"] %>
        </p>

        <p style="color:red;">
            <%= x["likes.data"]%>
        </p>
        <!-- <p class="h1" style="color:white;background-color:#00a8e6;"><%= x[""] %></p> -->
        <center><img  style="text-align:center;" src="<%= x["picture"] %>"></img></center>
        <br><br>
        <% end %>

<div class="">
<%  friends = @user_facebook.get_connections("me", "friends",fields:['name']).each do |y| %>
<p>
  <%= friends %>
</p>

<p>
  <%= y['friends'] %>
</p>
<%end%>
</div>


    </div>
</div>
<% end %>
